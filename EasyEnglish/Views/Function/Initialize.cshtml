@model System.Collections.Generic.List<EasyEnglish.Models.Card>

@{
    ViewBag.Title = "Initialize";
}

@section navigations {
    <ul class="nav navbar-nav">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="divider_vertical"></li>
        <li><a href="@Url.Action("Index", "Function")">Function</a></li>
    </ul>
}

<div id="function">
    <h2>Initialize</h2>
    <p>Click below button to initialize the database.</p>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group float-right">
            <button type="submit" id="sbmInitialize" class="btn btn-danger">
                Initialize
            </button>
        </div>
    }

    <p>
        @ViewBag.Result
    </p>

    @if (Model != null) {
        <h3>Deleted</h3>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr><th>Id</th><th>UserId</th><th>Question</th></tr>
            </thead>
            <tbody>
                @foreach (var c in Model) {
                    <tr><td>@c.Id</td><td>@c.UserId</td><td>@c.Question</td></tr>
                }
            </tbody>
        </table>
    }
    
    <div class="back_to">
        <a href="@Url.Action("Index", "Function")">Back</a>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            $("#sbmInitialize").click(function () {
                if (confirm("Are you sure you want to initialize this database?")) {
                    return true;
                } else {
                    return false;
                }
            });
        });
    </script>
}
